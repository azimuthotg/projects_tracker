# ========================================
# Production Environment Variables
# คัดลอกไฟล์นี้เป็น .env ที่ PROJECT_DIR
# ========================================

# Django
SECRET_KEY=your-very-long-random-secret-key-here
ALLOWED_HOSTS=lib.npu.ac.th,110.78.83.102

# HTTPS (True เมื่อใช้ IIS + SSL Cert)
HTTPS_ENABLED=True

# CSRF origins — ต้องระบุเมื่อใช้ HTTPS (ใส่ https:// นำหน้า)
CSRF_TRUSTED_ORIGINS=https://lib.npu.ac.th,https://110.78.83.102

# Path prefix สำหรับ IIS path-based routing
# เช่น ถ้า deploy ที่ lib.npu.ac.th/projects/ ให้ใส่ /projects
# ถ้าไม่ได้ใช้ path-based routing ให้ปล่อยว่าง
SCRIPT_NAME=/projects

# Database (MySQL)
DB_NAME=projects_tracker
DB_USER=admin_e
DB_PASSWORD=your-db-password
DB_HOST=202.29.55.213
DB_PORT=3306

# Waitress — เมื่อใช้ IIS ให้ listen แค่ localhost
WAITRESS_HOST=127.0.0.1
WAITRESS_PORT=8000
WAITRESS_THREADS=8

# Redis (สำหรับ Celery — ถ้ายังไม่ใช้ใส่ค่า default ไว้ก่อน)
REDIS_URL=redis://localhost:6379/0

# NPU AD API
NPU_API_BASE_URL=https://api.npu.ac.th/v2/ldap/
NPU_API_AUTH_ENDPOINT=auth_and_get_personnel/
NPU_API_TOKEN=your-npu-jwt-token
NPU_API_TIMEOUT=30

# LINE Messaging API (Phase 3)
LINE_CHANNEL_ACCESS_TOKEN=
LINE_CHANNEL_SECRET=
